<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.walkfure.chat.view.NoScrollViewPager
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#f0f0a0"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/image_layout_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_main_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_main0" />



            <TextView
                android:id="@+id/image_text_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="车"
                android:textColor="#434343"
                android:textSize="10sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_layout_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_main_1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_main1" />

                <TextView
                    android:id="@+id/red_text"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image_main_1"
                    android:background="@drawable/shape_red_drawable"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/image_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="#434343"
                android:textSize="10sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_layout_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_main_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_main4" />

            <TextView
                android:id="@+id/image_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="我"
                android:textColor="#434343"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>









</LinearLayout>